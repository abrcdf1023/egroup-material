{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["packages", "stories"],
    "baseUrl": "./",
    "paths": {
      "@e-group/material/*": ["packages/material/src/*"],
      "@e-group/material-form/*": ["packages/material-form/src/*"],
      "@e-group/material-formik/*": ["packages/material-formik/src/*"],
      "@e-group/material-icons/*": ["packages/material-icons/src/*"],
      "@e-group/material-lab/*": ["packages/material-lab/src/*"],
      "@e-group/material-layout/*": ["packages/material-layout/src/*"],
      "@e-group/material-module/*": ["packages/material-module/src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "packages/material/src/**/*",
    "packages/material-form/src/**/*",
    "packages/material-formik/src/**/*",
    "packages/material-icons/src/**/*",
    "packages/material-lab/src/**/*",
    "packages/material-layout/src/**/*",
    "packages/material-module/src/**/*",
    "stories/**/*"
  ],
  "exclude": ["node_modules"]
}