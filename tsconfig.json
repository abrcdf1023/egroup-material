{
"compilerOptions": {
  "outDir": "build/lib",
  "module": "commonjs",
  "target": "es5",
  "lib": ["es5", "es6", "es7", "es2017", "dom"],
  "sourceMap": true,
  "allowJs": false,
  "jsx": "react",
  "moduleResolution": "node",
  "rootDirs": ["packages", "stories"],
  "baseUrl": "packages",
  "paths": {
    "@e-group/material/*": ["material/src/*"],
    "@e-group/material-form/*": ["material-form/src/*"],
    "@e-group/material-lab/*": ["material-lab/src/*"],
    "@e-group/material-layout/*": ["material-layout/src/*"],
    "@e-group/material-module/*": ["material-module/src/*"]
  },
  "forceConsistentCasingInFileNames": true,
  "noImplicitReturns": true,
  "noImplicitThis": true,
  "noImplicitAny": true,
  "strictNullChecks": true,
  "suppressImplicitAnyIndexErrors": true,
  "noUnusedLocals": true,
  "declaration": true,
  "allowSyntheticDefaultImports": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true
},
"include": ["packages/**/*"],
"exclude": ["node_modules", "build", "scripts"]
}